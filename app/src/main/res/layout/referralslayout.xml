<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Date"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/refereed_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Refereed name"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/referrer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Referrer"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/package_purchased"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Package purchased"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/date_paid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Date paid"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/amount_paid_out"
        android:layout_weight="30"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:text="Amount paid out"
        android:textColor="@color/black" />

</LinearLayout>