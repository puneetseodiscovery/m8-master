<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogback"
    android:padding="@dimen/padding">


    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/link"
        android:textColor="@color/black"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/dialog_txtLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/topmargin"
        android:hint="Url"
        android:padding="@dimen/padding"
        android:textColor="@color/black"
        android:textSize="@dimen/text" />

    <Button
        android:id="@+id/dialog_btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_txtLink"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/topmargin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/buttonback"
        android:padding="@dimen/padding"
        android:text="Share"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text" />

    <Button
        android:id="@+id/dialog_btnCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_btnShare"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/topmargin"
        android:layout_marginRight="@dimen/margin"
        android:background="@drawable/dialogback"
        android:padding="@dimen/padding"
        android:text="Copy the url"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/text" />


</RelativeLayout>