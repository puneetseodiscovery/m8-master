                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/subtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/drawablepadding"
                    android:background="@color/subheading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/topmargin"
                    android:paddingBottom="@dimen/drawablepadding"
                    android:text="No money"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/subtext" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/drawablepadding"
                    android:background="@color/subheading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/topmargin"
                    android:paddingBottom="@dimen/drawablepadding"
                    android:text="No risk"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/subtext" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/drawablepadding"
                    android:background="@color/subheading" />

                <TextView
                    android:id="@+id/txtProperty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin"
                    android:gravity="center"
                    android:paddingTop="@dimen/topmargin"
                    android:paddingBottom="@dimen/drawablepadding"
                    android:text="Upload one item to sell, set non-negotiable fee"
                    android:textColor="@color/headingcolor"
                    android:textSize="@dimen/subtext" />
            </LinearLayout>


