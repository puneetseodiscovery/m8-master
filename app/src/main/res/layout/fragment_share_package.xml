<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.MyShareSubFragment.SharePackageFragment">

    <include
        android:id="@+id/tooolbar"
        layout="@layout/toolbar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tooolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@id/linearFree"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-70dp"
                android:background="@drawable/dimondshape"
                android:elevation="1dp"
                android:gravity="center"
                android:rotation="45">

                <TextView
                    android:id="@+id/txtFreePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:rotation="-45"
                    android:text="@string/chf"
                    android:textColor="@color/green"
                    android:textSize="@dimen/subtext" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearFree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="45dp"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/shareshape"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFreeHeading"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/topradius"
                    android:gravity="bottom|center"
                    android:paddingTop="@dimen/topmargin"
                    android:paddingBottom="@dimen/drawablepadding"
                    android:text="Free startup plan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text"
                    android:textStyle="bold" />


                <TextView
