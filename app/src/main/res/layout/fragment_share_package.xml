                        android:gravity="center"
                        android:rotation="45">

                        <TextView
                            android:id="@+id/txtProfessionalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:rotation="-45"
                            android:text="USD 80.00"
                            android:textColor="@color/green"
                            android:textSize="@dimen/subtext" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtProfessionalHeading"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/topmargin"
                        android:background="@drawable/topradius"
                        android:gravity="center|bottom"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Professional"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtProfessionalShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="1000 M8's shares"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Best for networkers and multi-level marketing gurus"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:id="@+id/txtProfessionalProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Upload 100 items to sell, negotiable fee structure"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

                    <Button
                        android:id="@+id/btnProfessional"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/buttonback"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@drawable/buttonback"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/padding"
                        android:text="Yearly subscription"
                        android:textSize="@dimen/subtext" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tooolbar"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/shareshape"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_above="@id/linerNovice"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/topmargin"
                        android:layout_marginBottom="-40dp"
                        android:background="@drawable/dimondshape"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:rotation="45">

                        <TextView
                            android:id="@+id/txtBusinessPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="5dp"
                            android:rotation="-45"
                            android:text="USD 150.00"
                            android:textColor="@color/green"
                            android:textSize="@dimen/subtext" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtBusinessHeading"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/topmargin"
                        android:background="@drawable/topradius"
                        android:gravity="center|bottom"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Bussiness"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtBusinessShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Unlimited M8's shares"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

