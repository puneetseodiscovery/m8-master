                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="500 M8's shares"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Best for members with an active online network"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:id="@+id/txtPlayerProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Upload 10 items to sell, negotiable fee structure"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

                    <Button
                        android:id="@+id/btnPlayer"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/buttonback"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin"
                        android:background="@drawable/buttonback"
                        android:text="Buy"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/padding"
                        android:text="Yearly subscription"
                        android:textSize="@dimen/subtext" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linerPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linerNovice"
                android:layout_marginTop="@dimen/topmargin"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tooolbar"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
