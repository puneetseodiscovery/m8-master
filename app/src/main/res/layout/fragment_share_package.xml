                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="100 M8's shares"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
                        android:text="Best for members building their online network"
                        android:textColor="@color/headingcolor"
                        android:textSize="@dimen/subtext" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/drawablepadding"
                        android:background="@color/subheading" />

                    <TextView
                        android:id="@+id/txtNoviceProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="@dimen/topmargin"
                        android:paddingBottom="@dimen/drawablepadding"
