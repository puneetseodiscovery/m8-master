<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UploadActivity.UploadActivity">


    <include
        android:id="@+id/tooolbar"
        layout="@layout/toolbar" />


    <LinearLayout
        android:id="@+id/linaer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tooolbar">


        <RadioGroup
            android:id="@+id/Radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Radio_resident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_weight="1"
                android:text="Upload single property"
                android:textColor="@color/headingcolor"
                android:textSize="@dimen/text"
                android:textStyle="bold" />


            <RadioButton
                android:id="@+id/Radio_commercial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_weight="1"
                android:text="Bulk upload"
                android:textColor="@color/headingcolor"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

        </RadioGroup>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linaer"
        android:layout_marginTop="-2dp">

    </FrameLayout>


</RelativeLayout>